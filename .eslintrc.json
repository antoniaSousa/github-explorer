{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "settings": {
            "import/resolver": {
              "typescript": {}
            }
          },
          "@typescript-eslint/explicit-function-return-type": [
              "error",
              {
                  "allowExpressions": true
              }
          ]
    },
    "settings": {
        "import/resolver": {
          "typescript": {}
        }
      }

}
